<application>
  <component name="KeyPromoterXStatistic">
    <option name="statistics">
      <Statistic Action="Settings...">
        <Item>
          <IdeaActionID>ShowSettings</IdeaActionID>
          <ShortCut>'Ctrl+Alt+S'</ShortCut>
          <Description>Settings...</Description>
          <Count>9</Count>
        </Item>
      </Statistic>
      <Statistic Action="Show Translation Dialog...">
        <Item>
          <IdeaActionID>$ShowTranslationDialogAction</IdeaActionID>
          <ShortCut>'Ctrl+Shift+O'</ShortCut>
          <Description>Show Translation Dialog...</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Terminal">
        <Item>
          <IdeaActionID>ActivateTerminalToolWindow</IdeaActionID>
          <ShortCut>'Alt+F12'</ShortCut>
          <Description>Terminal</Description>
          <Count>3</Count>
        </Item>
      </Statistic>
      <Statistic Action="Translate">
        <Item>
          <IdeaActionID>$EditorTranslateAction</IdeaActionID>
          <ShortCut>'Ctrl+Shift+Y'</ShortCut>
          <Description>Translate</Description>
          <Count>1</Count>
        </Item>
      </Statistic>
      <Statistic Action="Version Control">
        <Item>
          <IdeaActionID>ActivateVersionControlToolWindow</IdeaActionID>
          <ShortCut>'Alt+9' or 'Alt+Shift+9'</ShortCut>
          <Description>Version Control</Description>
          <Count>6</Count>
        </Item>
      </Statistic>
    </option>
  </component>
</application>